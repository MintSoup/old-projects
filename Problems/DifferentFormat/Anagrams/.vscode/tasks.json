{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-O3",
                "main.c",
                "-o",
                "main.exe",
                "&&",
                "./main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build for debug",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-O0",
                "main.c",
                "-o",
                "main.exe"
            ],
            "problemMatcher": []
        }
    ]
}